<xs:schema elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:complexType name="authorType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="url"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="licensorType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="url"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="licenseType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="url" use="required"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:element name="credittedWork" type="credittedWorkType"/>
    <xs:complexType name="credittedWorkType">
        <xs:all>
            <xs:element type="xs:string" name="title">
                <xs:annotation>
                    <xs:documentation>The title of the work.</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element type="authorType" name="author">
                <xs:annotation>
                    <xs:documentation>The author of the work.</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element type="licenseType" name="license">
                <xs:annotation>
                    <xs:documentation>The license of the work.</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element type="licensorType" name="licensor" minOccurs="0">
                <xs:annotation>
                    <xs:documentation>The (optional) licensor of the work.</xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:all>
    </xs:complexType>
</xs:schema>
