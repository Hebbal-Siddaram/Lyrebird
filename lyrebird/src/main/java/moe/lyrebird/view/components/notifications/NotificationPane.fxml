<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="notificationPane"
            minHeight="-Infinity"
            minWidth="100.0"
            xmlns="http://javafx.com/javafx/10.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="moe.lyrebird.view.components.notifications.NotificationsController">
    <children>
        <HBox mouseTransparent="true"
              alignment="CENTER"
              spacing="10.0"
              AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="5.0"
              AnchorPane.rightAnchor="5.0"
              AnchorPane.topAnchor="5.0">
            <children>
                <VBox maxHeight="1.7976931348623157E308"
                      maxWidth="1.7976931348623157E308"
                      mouseTransparent="true"
                      spacing="5.0"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="notificationTitle"
                               maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308"
                               mouseTransparent="true"
                               text="NOTIFICATION_TITLE"
                               VBox.vgrow="SOMETIMES">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <Label fx:id="notificationContent"
                               alignment="TOP_LEFT"
                               maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308"
                               mouseTransparent="true"
                               text="THIS IS THE CONTENT OF A NOTIFICATION WHICH MIGHT SPAN MULTIPLE LINES"
                               wrapText="true"
                               VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
                <ImageView mouseTransparent="true"
                           fitHeight="16.0"
                           fitWidth="16.0"
                           pickOnBounds="true"
                           preserveRatio="true"
                           HBox.hgrow="NEVER">
                    <image>
                        <Image url="@/assets/img/delete_button_black.png"/>
                    </image>
                </ImageView>
            </children>
        </HBox>
    </children>
</AnchorPane>
