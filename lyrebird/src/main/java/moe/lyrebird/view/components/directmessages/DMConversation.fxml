                        <TextArea fx:id="messageContent" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="80.0" prefHeight="80.0" VBox.vgrow="NEVER">
                           <VBox.margin>
                              <Insets right="2.0" top="5.0" />
                           </VBox.margin></TextArea>
                        <HBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
                           <children>
                              <Button fx:id="sendButton" mnemonicParsing="false" text="Send" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
