<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane minHeight="500.0" minWidth="380.0" prefHeight="500.0" prefWidth="380.0" stylesheets="@/style/lyrebird.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="moe.lyrebird.view.screens.user.UserViewController">
   <children>
      <VBox fx:id="container" alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" styleClass="dark">
               <children>
                  <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="NEVER">
                     <children>
                        <ImageView fx:id="userProfilePictureImageView" fitHeight="196.0" fitWidth="196.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" top="5.0" />
                           </HBox.margin>
                        </ImageView>
                        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                                 <children>
                                    <Label fx:id="userNameLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="USER_NAME">
                                       <font>
                                          <Font name="System Bold" size="24.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="userIdLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="\@userId" textFill="#7c7c7c" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                                 <children>
                                    <Button fx:id="followSwitchButton" mnemonicParsing="false" prefWidth="120.0" text="Follow" />
                                 </children>
                              </VBox>
                           </children>
                           <HBox.margin>
                              <Insets bottom="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
