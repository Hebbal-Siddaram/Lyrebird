                     <padding>
                        <Insets right="10.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="content" text="TWEET_CONTENT" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <ToolBar fx:id="toolbar" prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button fx:id="likeButton" mnemonicParsing="false" text="Like" />
            <Button fx:id="retweetButton" mnemonicParsing="false" text="Retweet" />
        </items>
      </ToolBar>
